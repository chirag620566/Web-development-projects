      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
    }

    .container {
      width: 420px;
      padding: 20px;
      background: white;
      border-radius: 16px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    h2 {
      text-align: center;
      margin-bottom: 10px;
      color: #333;
    }

    .date-picker {
      display: flex;
      justify-content: center;
      margin-bottom: 15px;
    }

    input[type="date"] {
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 8px;
    }

    .input-area {
      display: flex;
      margin-bottom: 10px;
    }

    input[type="text"] {
      flex: 1;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 8px;
      outline: none;
    }

    button {
      margin-left: 8px;
      padding: 10px 15px;
      border: none;
      border-radius: 8px;
      background: #28a745;
      color: white;
      cursor: pointer;
      transition: 0.3s;
    }

    button:hover {
      background: #218838;
    }

    ul {
      list-style: none;
      padding: 0;
      margin-top: 10px;
    }

    li {
      padding: 10px;
      margin-top: 8px;
      background: #f9f9f9;
      border-radius: 8px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      transition: 0.3s;
    }

    li:hover {
      background: #ececec;
    }

    .delete {
      background: red;
      color: white;
      padding: 5px 8px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 12px;
      margin-left: 10px;
      transition: 0.3s;
    }

    .delete:hover {
      background: darkred;
    }

    .done {
      text-decoration: line-through;
      color: gray;
    }

    .timestamp {
      font-size: 12px;
      color: #666;
      margin-left: 5px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2> Day-Wise To-Do List</h2>

    <!-- Date Picker -->
    <div class="date-picker">
      <input type="date" id="taskDate" onchange="loadTasks()">
    </div>

    <!-- Task Input -->
    <div class="input-area">
      <input type="text" id="taskInput" placeholder="Add a new task...">
      <button onclick="addTask()">Add</button>
    </div>

    <!-- Task List -->
    <ul id="taskList"></ul>
  </div>

  <script>
    // Load today's date by default
    const dateInput = document.getElementById("taskDate");
    const today = new Date().toISOString().split("T")[0];
    dateInput.value = today;

    function getTasks() {
      return JSON.parse(localStorage.getItem("tasks")) || {};
    }

    function saveTasks(tasks) {
      localStorage.setItem("tasks", JSON.stringify(tasks));
    }

    function loadTasks() {
      const tasks = getTasks();
      const selectedDate = dateInput.value;
      const taskList = document.getElementById("taskList");
      taskList.innerHTML = "";

      if (tasks[selectedDate]) {
        tasks[selectedDate].forEach((task, index) => {
          let li = document.createElement("li");
          li.innerHTML = `
            <span onclick="toggleDone('${selectedDate}', ${index}, this)" class="${task.done ? 'done' : ''}">
              ${task.text} <span class="timestamp">(${task.time})</span>
            </span>
            <span class="delete" onclick="removeTask('${selectedDate}', ${index})">X</span>
          `;
          taskList.appendChild(li);
        });
      }
    }

    function addTask() {
      let input = document.getElementById("taskInput");
      let taskText = input.value.trim();
      if (taskText === "") return;

      const selectedDate = dateInput.value;
      let tasks = getTasks();

      if (!tasks[selectedDate]) tasks[selectedDate] = [];

      const now = new Date();
      const time = now.toLocaleTimeString([], { hour: "2-digit", minute: "2-digit" });

      tasks[selectedDate].push({ text: taskText, time: time, done: false });
      saveTasks(tasks);

      input.value = "";
      loadTasks();
    }

    function removeTask(date, index) {
      let tasks = getTasks();
      tasks[date].splice(index, 1);
      saveTasks(tasks);
      loadTasks();
    }

    function toggleDone(date, index, element) {
      let tasks = getTasks();
      tasks[date][index].done = !tasks[date][index].done;
      saveTasks(tasks);
      element.classList.toggle("done");
    }

    // Load today's tasks at start
    loadTasks();
  </script>
</body>
</html>
